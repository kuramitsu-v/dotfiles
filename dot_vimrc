" clipboardにコピー
set clipboard+=unnamed
" デフォルトを垂直分割にする
set diffopt=vertical
" 検索ハイライトを有効
set hlsearch
" カーソル形状の変更
if has('vim_starting')
    " 挿入モード時に点滅の縦棒タイプのカーソル
    let &t_SI .= "\e[5 q"
    " ノーマルモード時に点滅のブロックタイプのカーソル
    let &t_EI .= "\e[1 q"
    " 置換モード時に非点滅の下線タイプのカーソル
    let &t_SR .= "\e[4 q"
endif
" カーソルラインをハイライト
set cursorline
