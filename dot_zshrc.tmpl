#   zle backward-delete-char
# }
# zle -N my-backward-kill-word
# bindkey "^[[1;4D" my-backward-kill-word

# ctrl + p/nをhistory-search-xxxに変更
bindkey "^N" history-search-forward
bindkey "^P" history-search-backward
