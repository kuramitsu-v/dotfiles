// 既定値を上書きするには、このファイル内にキー バインドを挿入しますauto[]
[
  ///////////////////////////////////////////////
  // デフォルト設定をOFF・他
  ///////////////////////////////////////////////
  {
    "key": "enter",
    "command": "-list.select",
    "when": "listFocus && !inputFocus && !notebookCellListFocused"
  },
  {
    "key": "ctrl + pageup",
    "command": "-workbench.action.previousEditor"
  },
  {
    "key": "ctrl + tab",
    "command": "workbench.action.nextEditor"
  },
  {
    "key": "shift+left",
    "command": "-cursorColumnSelectLeft",
    "when": "editorColumnSelection && textInputFocus"
  },
  {
    "key": "shift+right",
    "command": "-cursorColumnSelectRight",
    "when": "editorColumnSelection && textInputFocus"
  },
  {
    "key": "cmd+e",
    "command": "-actions.findWithSelection"
  },
  ///////////////////////////////////////////////
  // 通常設定
  ///////////////////////////////////////////////
  // cmd + shift + eでエクスプローラにフォーカス(エディタ側にはフォーカスしない)
  {
    "key": "shift+cmd+e",
    "command": "workbench.files.action.focusFilesExplorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  {
    "key": "shift+cmd+e",
    "command": "-workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // ソース管理(Git)にフォーカスする
  {
    "key": "shift+cmd+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "ctrl+shift+g",
    "command": "-workbench.view.scm",
    "when": "workbench.scm.active"
  },
  {
    "key": "shift+cmd+g",
    "command": "-workbench.action.terminal.findPrevious",
    "when": "terminalFindFocused && terminalHasBeenCreated || terminalFindFocused && terminalProcessSupported || terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  {
    "key": "shift+cmd+g",
    "command": "-editor.action.previousMatchFindAction",
    "when": "editorFocus"
  },
  {
    "key": "ctrl+cmd+f",
    "command": "search.action.focusSearchList"
  },
  {
    "key": "ctrl+cmd+f",
    "command": "-workbench.action.toggleFullScreen",
    "when": "!isIOS"
  },
  // タブを右に移動
  {
    "key": "shift+alt+cmd+]",
    "command": "workbench.action.moveEditorRightInGroup"
  },
  {
    "key": "cmd+k shift+cmd+right",
    "command": "-workbench.action.moveEditorRightInGroup"
  },
  // タブを左に移動
  {
    "key": "shift+alt+cmd+[",
    "command": "workbench.action.moveEditorLeftInGroup"
  },
  {
    "key": "cmd+k shift+cmd+left",
    "command": "-workbench.action.moveEditorLeftInGroup"
  },
  // タブを下グループに移動
  {
    "key": "alt+cmd+right",
    "command": "-workbench.action.nextEditor"
  },
  // タブを上グループに移動
  {
    "key": "alt+cmd+left",
    "command": "-workbench.action.previousEditor"
  },
  // shift + ↑で行ごとセレクトできるように
  {
    "key": "shift+up",
    "command": "-cursorUpSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+up",
    "command": "cursorUpSelect"
  },
  {
    "key": "shift+up",
    "command": "-cursorColumnSelectUp",
    "when": "editorColumnSelection && textInputFocus"
  },
  // shift + ↓で行ごとセレクトできるように
  {
    "key": "shift+down",
    "command": "-cursorColumnSelectDown",
    "when": "editorColumnSelection && textInputFocus"
  },
  {
    "key": "shift+down",
    "command": "-cursorDownSelect",
    "when": "textInputFocus"
  },
  {
    "key": "shift+down",
    "command": "cursorDownSelect"
  },
  // markdownをプレビュー表示する
  {
    "key": "shift+cmd+v",
    "command": "markdown.showPreviewToSide",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
  },
  {
    "key": "cmd+k v",
    "command": "-markdown.showPreviewToSide",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
  },
  {
    "key": "shift+cmd+v",
    "command": "-markdown.showPreview",
    "when": "!notebookEditorFocused && editorLangId == 'markdown'"
  },
  {
    "key": "shift+cmd+v",
    "command": "-markdown-preview-enhanced.openPreview",
    "when": "editorLangId == 'markdown'"
  },
  // エディタを←に広げる
  {
    "key": "ctrl+[",
    "command": "workbench.action.increaseViewWidth"
  },
  // エディタを右に広げる
  {
    "key": "ctrl+]",
    "command": "workbench.action.decreaseViewWidth"
  },
  // エディタを下に広げる
  {
    "key": "ctrl+shift+]",
    "command": "workbench.action.decreaseViewHeight"
  },
  // エディタを上に広げる
  {
    "key": "ctrl+shift+[",
    "command": "workbench.action.increaseViewHeight"
  },
  // エクスプローラで現在開いているファイルにフォーカスする
  {
    "key": "ctrl+cmd+e",
    "command": "workbench.files.action.focusOpenEditorsView",
    "when": "workbench.explorer.openEditorsView.active"
  },
  {
    "key": "cmd+k e",
    "command": "-workbench.files.action.focusOpenEditorsView",
    "when": "workbench.explorer.openEditorsView.active"
  },
  // 引数Hintのホバーを開く
  {
    "key": "alt+cmd+space",
    "command": "editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  {
    "key": "shift+cmd+space",
    "command": "-editor.action.triggerParameterHints",
    "when": "editorHasSignatureHelpProvider && editorTextFocus"
  },
  // 引数Hintのホバーを閉じる
  {
    "key": "alt+cmd+space",
    "command": "closeParameterHints",
    "when": "editorFocus && parameterHintsVisible"
  },
  {
    "key": "shift+escape",
    "command": "-closeParameterHints",
    "when": "editorFocus && parameterHintsVisible"
  },
  // ホバーを表示
  {
    "key": "alt+cmd+space",
    "command": "editor.action.showDefinitionPreviewHover"
  },
  // ホバーを表示
  {
    "key": "cmd+k cmd+i",
    "command": "-editor.action.showHover",
    "when": "editorTextFocus"
  },
  // エクスプローラでアクティブなファイルにフォーカスを移動
  {
    "key": "alt+cmd+e",
    "command": "workbench.files.action.showActiveFileInExplorer"
  },
  {
    "key": "alt+cmd+e",
    "command": "-rest-client.switch-environment"
  },
  // アクティブなエディタグループにフォーカス
  {
    "key": "cmd+e",
    "command": "workbench.action.focusActiveEditorGroup"
  },
  // エディタを下に移動
  {
    "key": "cmd+d",
    "command": "workbench.action.moveEditorToBelowGroup"
  },
  // エディタを上に移動
  {
    "key": "shift+cmd+d",
    "command": "workbench.action.moveEditorToAboveGroup"
  },
  // エディタを右に分割
  // {
  //   "key": "alt+cmd+d",
  //   "command": "workbench.action.splitEditorRight"
  // },
  // 下にエディタを分割
  // {
  //   "key": "shift+alt+cmd+d",
  //   "command": "workbench.action.splitEditorDown"
  // },
  // 同一エディタ内でのエディタ分割切り替え
  {
    "key": "alt+cmd+d",
    "command": "workbench.action.toggleSplitEditorInGroup"
  },
  // もう一方のエディタにフォーカス(同一エディタ分割時)
  {
    "key": "cmd+d",
    "command": "workbench.action.focusOtherSideEditor",
    "when": "!activeEditorCanSplitInGroup"
  },
  // 拡大
  {
    "key": "shift+cmd+[Semicolon]",
    "command": "workbench.action.zoomIn"
  },
  {
    "key": "shift+cmd+[Minus]",
    "command": "-workbench.action.zoomIn"
  },
  // 縮小
  {
    "key": "shift+cmd+[Minus]",
    "command": "workbench.action.zoomOut"
  },
  {
    "key": "cmd+[IntlRo]",
    "command": "-workbench.action.zoomOut"
  },
  {
    "key": "cmd+[Minus]",
    "command": "-workbench.action.zoomOut"
  },
  // プレビューモードを解除
  {
    "key": "cmd+space",
    "command": "workbench.action.keepEditor"
  },
  {
    "key": "cmd+k enter",
    "command": "-workbench.action.keepEditor"
  },
  // 検索結果を全て展開(エクスプローラフォーカス時)
  {
    "key": "cmd+right",
    "command": "search.action.expandSearchResults",
    "when": "listFocus && treeElementCanExpand && !inputFocus || listFocus && treeElementHasChild && !inputFocus"
  },
  // 新しいファイル作成(エクスプローラフォーカス時)
  {
    "key": "cmd+n",
    "command": "explorer.newFile",
    "when": "listFocus && !inputFocus || listFocus && !inputFocus"
  },
  // 新しいフォルダ作成(エクスプローラフォーカス時)
  {
    "key": "shift+cmd+n",
    "command": "explorer.newFolder",
    "when": "listFocus && !inputFocus || listFocus && !inputFocus"
  },
  // 現在開いているファイルのパスをコピー
  {
    "key": "alt+p",
    "command": "workbench.action.files.copyPathOfActiveFile"
  },
  // 戻る
  {
    "key": "ctrl+z ctrl+a",
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  // ファイルに移動(ファイルに戻る)
  {
    "key": "ctrl+z ctrl+q",
    "command": "workbench.action.quickOpen"
  },
  // 定義先へ進む
  {
    "key": "ctrl+z ctrl+z",
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor"
  },
  // 再帰的に折りたたむ
  {
    "key": "ctrl+z ctrl+x",
    "command": "editor.foldRecursively",
    "when": "editorTextFocus && foldingEnabled"
  },
  // 再帰的に展開する
  {
    "key": "ctrl+z ctrl+s",
    "command": "editor.unfoldRecursively",
    "when": "editorTextFocus && foldingEnabled"
  },
  // DiffEditorでsidebyside表示の切り替え
  {
    "key": "shift+cmd+d",
    "command": "toggle.diff.renderSideBySide",
    "when": "inDiffEditor"
  },
  // DiffEditorで逆側にフォーカス
  {
    "key": "cmd+d",
    "command": "workbench.action.compareEditor.focusOtherSide",
    "when": "inDiffEditor"
  },
  // 開発者コンテキストキーの検査
  {
    "key": "alt+cmd+j",
    "command": "workbench.action.inspectContextKeys"
  },
  // 開発者ツールの切り替え(when句なしにしていつでも開くように)
  {
    "key": "alt+cmd+i",
    "command": "workbench.action.toggleDevTools"
  },
  // タイムラインにフォーカス
  {
    "key": "alt+cmd+t",
    "command": "timeline.focus"
  },
  {
    "key": "alt+cmd+t",
    "command": "-workbench.action.closeOtherEditors"
  },
  // コマンドパレットを表示
  {
    "key": "ctrl+x",
    "command": "workbench.action.showCommands"
  },
  ///////////////////////////////////////////////
  // 拡張機能
  ///////////////////////////////////////////////
  // (markdown-preview-enhanced)markdownをプレビュー表示する
  {
    "key": "shift+cmd+v",
    "command": "markdown-preview-enhanced.openPreviewToTheSide",
    "when": "editorLangId == 'markdown'"
  },
  {
    "key": "cmd+k v",
    "command": "-markdown-preview-enhanced.openPreviewToTheSide",
    "when": "editorLangId == 'markdown'"
  },
  // (markdown all in one)toggleMath[cmd+m]をOFFにする
  {
    "key": "cmd+m",
    "command": "-markdown.extension.editing.toggleMath",
    "when": "editorTextFocus && !editorReadonly && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  // (vscodevim)vscodevimをON/OFF切り替える
  {
    "key": "alt+cmd+v",
    "command": "toggleVim"
  },
  // (labeled bookmark)labeled bookmarkにフォーカスする
  {
    "key": "alt+cmd+b",
    "command": "bookmarksByActiveGroup.focus"
  },
  {
    "key": "ctrl+alt+m",
    "command": "-vsc-labeled-bookmarks.toggleBookmark",
    "when": "editorTextFocus"
  },
  // (labeled bookmark)ブックマークする
  {
    "key": "shift+cmd+b",
    "command": "vsc-labeled-bookmarks.toggleLabeledBookmark",
    "when": "editorTextFocus"
  },
  {
    "key": "shift+cmd+b",
    "command": "-workbench.action.tasks.build",
    "when": "taskCommandsRegistered"
  },
  {
    "key": "ctrl+alt+l",
    "command": "-vsc-labeled-bookmarks.toggleLabeledBookmark",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+alt+m",
    "command": "vsc-labeled-bookmarks.toggleBookmark"
  },
  // (multi commands)タブを閉じて左に移動する
  {
    "key": "cmd+w",
    "command": "extension.multiCommand.execute",
    "args": { "command": "multiCommand.closeEditorFocusLeft" },
    "when": "!activeEditorIsLastInGroup"
  },
  //// 一番右タブの時は通常通り閉じるだけ
  {
    "key": "cmd+w",
    "command": "workbench.action.closeActiveEditor",
    "when": "activeEditorIsLastInGroup"
  },
  //// 一番左タブの時は通常通り閉じるだけ
  {
    "key": "cmd+w",
    "command": "workbench.action.closeActiveEditor",
    "when": "activeEditorIsFirstInGroup"
  },
  {
    "key": "cmd+w",
    "command": "-workbench.action.closeActiveEditor"
  },
  // (ToggleQuotes) quoteの切り替え
  {
    "key": "shift+cmd+2",
    "command": "editor.togglequotes"
  },
  {
    "key": "shift+cmd+7",
    "command": "-editor.togglequotes"
  },
  // (Jumpy) Wordのjump mode
  {
    "key": "shift+cmd+j",
    "command": "extension.jumpy-word"
  },
  // (Jumpy) jump modeの解除
  {
    "key": "escape",
    "command": "extension.jumpy-exit",
    "when": "jumpy.isJumpyMode"
  },
  // (Jumpy) Lineのjump mode
  {
    "key": "ctrl+cmd+j",
    "command": "extension.jumpy-line"
  },
  // (MetaGo)下の空白行に移動
  {
    "key": "cmd+]",
    "command": "metaGo.gotoEmptyLineDown",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+end",
    "command": "-metaGo.gotoEmptyLineDown",
    "when": "editorTextFocus"
  },
  // (MetaGo)上の空白行に移動 ※コマンドタイトル表示がselectなのミスっぽい「xx: metaGo.select Empty Line Move Up」
  {
    "key": "cmd+[",
    "command": "metaGo.gotoEmptyLineUp",
    "when": "editorTextFocus"
  },
  {
    "key": "alt+home",
    "command": "-metaGo.gotoEmptyLineUp",
    "when": "editorTextFocus"
  },
  // (Gitlens) DiffEditorで開いた元ファイルを開く
  {
    "key": "cmd+o",
    "command": "gitlens.openWorkingFile",
    "when": "inDiffEditor"
  },
  // (GitHub) コメントビューの開閉
  {
    "key": "shift+cmd+r",
    "command": "workbench.panel.comments"
  },
  // (GitHub) PRのレビューコメントを追加
  {
    "key": "ctrl+c",
    "command": "workbench.action.addComment"
  },
  // (GitHub) PRのビューにフォーカス
  // when : ActivePRが表示可能な場合
  {
    "key": "ctrl+cmd+g",
    "command": "prStatus:github.focus",
    "when": "github:activePullRequest.visible"
  },
  // (Github) 元のファイルを開く（vscodeのbugでショートカットキーが効かないよう?）
  // {
  //   "key": "cmd+enter",
  //   "command": "pr.openOriginalFile",
  //   "when": "activeViewlet == 'workbench.view.extension.github-pull-requests'"
  // },
  // (Github) Githubを表示
  // when : ActivePRが表示可能でない場合
  {
    "key": "ctrl+cmd+g",
    "command": "workbench.view.extension.github-pull-requests",
    "when": "!github:activePullRequest.visible"
  },
  // (Github) Githubを表示
  {
    "key": "alt+cmd+g",
    "command": "workbench.view.extension.github-pull-requests"
    ///////////////////////////////////////////////
    // 以下自動入力
    ///////////////////////////////////////////////
  }
]
